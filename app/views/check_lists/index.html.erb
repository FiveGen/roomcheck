<h1>Select CheckList</h1>

<ul id="check-list">
	<% @checklists.each do |check_list| %>
		<% check_list.check_items.each do |check_item| %>
	  <li>                   
		  <input type="checkbox" />
		  <%= check_item.name %>
		    <%= link_to_problem(check_item.id, check_item.check_list.unit_id) %>
			<%= link_to "Edit", edit_check_item_path(check_item) %>
		</li>
		<% end %>
    <% end %>
	  <li><%= link_to check_list.name, check_list_path(check_list) %></li>
	<% end %>
</ul>
