<h1>Check List Items</h1>

<ul id="check-list">
	<% @checklists.each do |check_list| %>
		<% check_list.check_items.each do |check_item| %>
	  <li>                   
		  <input type="checkbox" />
		  <%= check_item.name %>
		    <%= link_to "Report Problem", new_result_path(:check_item_id => check_item.id, :unit_id => check_item.check_list.unit_id) %>
			<%= link_to "Edit", edit_check_item_path(check_item) %>
		</li>
		<% end %>
	<% end %>
</ul>
<br/>
<br/>
<%= link_to "Add Item", new_check_item_path %>
