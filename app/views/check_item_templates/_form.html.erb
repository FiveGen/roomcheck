<%= form_for(@check_item_template, :html => {:class => "form-vertical"}) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
	<br />
  <div class="field">
    <%= f.label :area %>
    <%= f.text_field :area %>
  </div>
  <div class="actions">
    <%= f.submit(:class => "btn btn-primary") %> <%= link_to 'Cancel', check_item_templates_path, :class => "btn" %>
  </div>
<% end %>
