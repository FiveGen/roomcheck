<!DOCTYPE html>
<html>
<head>
  <title>Roomcheck</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<%=  yield :head %>
	<%= favicon_link_tag %>
  <link rel="apple-touch-icon" href="/assets/check_logo.png" />
  <link rel="apple-touch-icon" sizes="72x72" href="/assets/check_logo.png" />
  <link rel="apple-touch-icon" sizes="114x114" href="/assets/check_logo_retina.png" />
</head>
<body>
<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</a>
			<%= link_to("Room Check", check_lists_path, :class => "brand") %>
			<div class="nav-collapse">
				<ul class="nav">
					<li><%= link_to "Rooms", check_lists_path %></li>
					<li><%= link_to "Checks", check_item_templates_path %></li>
					<li><%= link_to "Problems", results_path %></li>
					<%= yield :nav %>
				</ul>
				<ul class="nav pull-right">
					<li class="divider-vertical"></li>
					<li><%= link_to("Logout", destroy_user_session_path, :method => 'DELETE') if user_signed_in? %></li>
				</ul>
			</div>
		</div>
	</div>
</div>



<div class="container">

	<% flash.each do |name, msg| %>
		<div class="alert alert-<%= name == :notice ? "success" : "error" %>">
			<button class="close" data-dismiss="alert">Ã—</button>
			<%= msg  %>
		</div>
	<% end %>

	<%= yield %>

</div>
</body>
</html>
 
