<% content_for :head do %>
<style>
#demo-frame > div.severity { padding: 10px !important; };
</style>
<script>
$(function() {
	var select = $( "#result_severity" );
	var slider = $( "<div id='slider'></div>" ).insertAfter( select ).slider({
		min: 1,
		max: 6,
		range: "min",
		value: select[ 0 ].selectedIndex + 1,
		slide: function( event, ui ) {
			select[ 0 ].selectedIndex = ui.value - 1;
		}
	});
	$( "#result_severity" ).change(function() {
		slider.slider( "value", this.selectedIndex + 1 );
	});
});
</script>
<% end %>







<div class="severity">
<%= form_for (@result) do |f| %>

<% @result.errors.full_messages.each do |msg|  %>
    <p><%= msg %></p>
<% end %>

<%= f.label :comment, 'Describe problem'  %>
<%= f.text_field :comment %>
<br/><br/>
<%= f.label :severity  %>
<%= f.select :severity, options_for_select([["No Problems","0"], ["Negligible","1"], ["Minor","2"], ["Moderate","3"], ["Serious","4"], ["Emergency","5"]], :selected => @result.severity) %>
<br/>
<%= f.hidden_field :check_item_id %>

<%= f.submit "Save", :class => "btn btn-primary" %>
<% end %>
</div><!-- End demo -->