<%= form_for (@check_item) do |f| %>
	<% @check_item.errors.full_messages.each do |msg| %>
		<%= msg %>
	<% end %>
	<%= f.label :name, "Description of Task" %>
	<%= f.text_field :name %>
<br/>
	<%= f.label :area, "Area" %>
	<%= f.text_field :area %>
	<br/>
    
<% if @check_item.check_list_id %>
	<%= f.hidden_field :check_list_id %>
<% else %>
	<%= f.text_field :check_list_id %>
<% end %>

<% if @check_item.id.nil? %>
	<br />
	<%= check_box_tag "add_all_rooms", true %>
	Add to all rooms
	<br />

<% end %>
<br/>
	<%= f.submit("Save", :class => "btn btn-primary")%> <%= link_to "Cancel", check_list_path(@check_item.check_list_id), :class => "btn" %>
	
<% end %>